<section class="py-24 px-6 lg:px-20 bg-white">
  <div class="max-w-6xl mx-auto grid md:grid-cols-2 gap-12 items-center">

    <!-- Google Map -->
    <div class="h-[400px] w-full rounded-lg overflow-hidden shadow-lg">
      <iframe
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3456.1234567890!2d31.2345678!3d30.1234567!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x145840abcdef1234%3A0xabcdef1234567890!2sLotus%20Tours%20Office%2C%20Cairo%2C%20Egypt!5e0!3m2!1sen!2s!4v1688888888888!5m2!1sen!2s"
        class="w-full h-full border-0"
        allowfullscreen=""
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"
      ></iframe>
    </div>

    <!-- Contact Form -->
    <div>
      <h2 class="text-3xl md:text-4xl font-bold text-gray-800 mb-8">
        How We Can Help
      </h2>

      <form class="grid gap-6">

        <!-- First & Last Name -->
        <div class="grid md:grid-cols-2 gap-6">
          <input
            type="text"
            placeholder="First Name"
            class="border border-gray-300 rounded-lg px-4 py-3 focus:ring-2 focus:ring-[#C8A976] outline-none"
          />
          <input
            type="text"
            placeholder="Last Name"
            class="border border-gray-300 rounded-lg px-4 py-3 focus:ring-2 focus:ring-[#C8A976] outline-none"
          />
        </div>

        <!-- Email & Subject -->
        <div class="grid md:grid-cols-2 gap-6">
          <input
            type="email"
            placeholder="Email"
            class="border border-gray-300 rounded-lg px-4 py-3 focus:ring-2 focus:ring-[#C8A976] outline-none"
          />
          <input
            type="text"
            placeholder="Subject"
            class="border border-gray-300 rounded-lg px-4 py-3 focus:ring-2 focus:ring-[#C8A976] outline-none"
          />
        </div>

        <!-- Message -->
        <textarea
          rows="6"
          placeholder="Message"
          class="border border-gray-300 rounded-lg px-4 py-3 focus:ring-2 focus:ring-[#C8A976] outline-none"
        ></textarea>

        <!-- Submit Button -->
        <button
          type="submit"
          class="bg-[#C8A976] hover:bg-[#b8954f] transition text-white py-4 rounded-full font-semibold"
        >
          Send Message
        </button>

      </form>
    </div>

  </div>
</section>
