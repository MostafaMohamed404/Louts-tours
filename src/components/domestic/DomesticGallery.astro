---

<section class="py-20 px-6 md:px-12 lg:px-20 bg-white">

  <!-- Header -->
  <div class="text-center mb-14">

    <h2 class="text-3xl md:text-4xl font-bold mb-4">
      Travel Gallery
    </h2>

    <p class="text-gray-600 max-w-2xl mx-auto">
      Real moments from our domestic trips across Egypt.
    </p>

  </div>


  <!-- Masonry Layout -->
  <div class="columns-1 sm:columns-2 md:columns-3 lg:columns-4 gap-6 space-y-6">

    {images.map((image) => (

      <div class="break-inside-avoid group relative overflow-hidden rounded-2xl shadow-md hover:shadow-2xl transition duration-500">

        <img
          src={image.src}
          loading="lazy"
          class={`w-full object-cover ${image.height} transition duration-700 group-hover:scale-110`}
          alt="Lotus Tours Gallery"
        />

        <!-- Overlay -->
        <div class="absolute inset-0 bg-black/0 group-hover:bg-black/30 transition duration-300"></div>

        <!-- Hover Text -->
        <div class="absolute bottom-4 left-4 opacity-0 group-hover:opacity-100 transition duration-300">

          <span class="text-white font-semibold">
            Lotus Tours
          </span>

        </div>

      </div>

    ))}

  </div>

</section>
