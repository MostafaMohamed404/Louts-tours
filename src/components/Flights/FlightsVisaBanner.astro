<section class="py-28 bg-gray-50">

  <div class="max-w-7xl mx-auto px-4">

    <div class="relative rounded-3xl overflow-hidden">

      <!-- Background Image -->
      <img
        src="https://images.unsplash.com/photo-1542296332-2e4473faf563?q=80&w=1600&auto=format&fit=crop"
        alt="Visa and Flight"
        loading="lazy"
        class="absolute inset-0 w-full h-full object-cover"
      />

      <!-- Overlay -->
      <div class="absolute inset-0 bg-black/70"></div>

      <!-- Content -->
      <div class="relative z-10 px-8 py-20 md:px-16 md:py-24 max-w-3xl">

        <h2 class="text-4xl md:text-5xl font-bold text-white leading-tight">
          Book Your Flight and Get Your Visa Easily
        </h2>

        <p class="text-white/80 mt-6 text-lg leading-relaxed">
          We provide complete travel solutions including flight booking and tourist visa assistance for top destinations worldwide.
        </p>

        <!-- Features -->
        <div class="flex flex-wrap gap-6 mt-8 text-white/90">

          <div class="flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M5 13l4 4L19 7"/>
            </svg>
            Visa Assistance
          </div>

          <div class="flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M5 13l4 4L19 7"/>
            </svg>
            Fast Processing
          </div>

          <div class="flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M5 13l4 4L19 7"/>
            </svg>
            Trusted Service
          </div>

        </div>

        <!-- Buttons -->
        <div class="flex flex-wrap gap-4 mt-10">

          <button class="bg-white text-black px-8 py-4 rounded-xl font-semibold hover:bg-gray-200 transition">
            Book Flight Now
          </button>

          <button class="border border-white text-white px-8 py-4 rounded-xl font-semibold hover:bg-white hover:text-black transition">
            Apply for Visa
          </button>

        </div>

      </div>

    </div>

  </div>

</section>